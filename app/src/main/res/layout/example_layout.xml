                    android:id="@+id/plain"
                    android:layout_width="@dimen/bottom_sheet_handle_width"
                    android:layout_height="@dimen/bottom_sheet_handle_height"
                    android:layout_marginRight="40dp" />

                <com.github.dkincorporated.handle.PullHandleView
                    android:id="@+id/pull"
                    android:layout_width="@dimen/sample_bottom_sheet_handle_width"
                    android:layout_height="@dimen/sample_bottom_sheet_handle_height" />

            </LinearLayout>


