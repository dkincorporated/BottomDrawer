            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/corner_radius_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/extra_padding_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/status_bar_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Light Status Bar" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/navigation_bar_accent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="Navigation Bar" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/should_draw_under_status_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Should Draw Under Status View" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/should_draw_under_handle_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="Should Draw Under Handle View" />


            <LinearLayout
